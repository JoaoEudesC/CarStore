{
    "compilerOptions": {
        "target": "ES2016",
        "lib": ["es6", "dom"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": "./",
        "sourceMap": true,
        "paths": {
            "@modules/*": ["src/modules/*"],
            "@config/*": ["src/config/*"],
            "@shared/*": ["src/shared/*"],
            "@errors/*": ["src/shared/errors/*"]
        },
        "resolveJsonModule": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "exclude": ["jest.config.ts", "node_modules"]
}